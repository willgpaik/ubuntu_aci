%setup
    
%files

%environment 

%runscript

%post
    apt-get update
    apt-get -y install --no-install-recommends \
        apt-utils \
        nux-tools \
        wget \
        git
    apt-get -y install --no-install-recommends \
        python3.7-dev \
        curl \
        bzip2 \
        ca-certificates \
        xvfb \
        cython3 \
        build-essential \
        autoconf \
        libtool \
        pkg-config
        
    apt-get clean
    
    # Link directories
    mkdir -p /storage/home
    mkdir -p /storage/work
    mkdir -p /gpfs/scratch
    mkdir -p /gpfs/group
    mkdir -p /var/spool/torque
      
