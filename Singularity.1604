BootStrap: docker
From: ubuntu:16.04

%setup
    
%files

%environment 

%runscript

%post
    apt-get update
    apt-get -y install --no-install-recommends \
        apt-utils \
        nux-tools \
        wget \
        git
    apt-get -y install --no-install-recommends \
        python2.7-dev \
        python3-dev \
        curl \
        bzip2 \
        ca-certificates \
        xvfb \
        cython3 \
        build-essential \
        autoconf \
        libtool \
        pkg-config \
        vim \
        nano \
        libglu1-mesa-dev \
        freeglut3-dev \
        mesa-common-dev
        
    apt-get clean
    
    ln -s /usr/bin/python2.7 /usr/bin/python
    
    # Link directories
    mkdir -p /storage/home
    mkdir -p /storage/work
    mkdir -p /gpfs/scratch
    mkdir -p /gpfs/group
    mkdir -p /var/spool/torque
